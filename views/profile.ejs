<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="card">
          <div>
              <p><strong>Username</strong>: <%= user.userName %></p>
              <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
              <a href="/createpost">Make a Post</a>
          </div>
      </div>
      <div class="col">
        <h2>My Posts</h2>
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <h3><%= posts[i].location %></h3>
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/makepost">Add Post</a>
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>