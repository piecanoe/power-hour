<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="<%= user.profilePic %>" alt="profile pic">
      <div class="card-body">
        <h5 class="card-title"><%= user.userName %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Bio: <%= user.bio %></li>
        <li class="list-group-item">Location: <%= user.location %></li>
      </ul>
      <div class="card-body">
        <a href="/logout" class="btn btn-primary">Logout</a>
      </div>
    </div>
          </div> 
      </div>
      <div class="col">
        <h2>Added by Me</h2>
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <h3><%= posts[i].location %></h3>
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/post/createpost">Add Post</a>
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>